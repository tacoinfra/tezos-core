{
    "compilerOptions": {
        "baseUrl": "src",
        "rootDir": "./",
        "outDir": "build",
        "target": "ES2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "removeComments": true,
        "strict": true,
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "include": [
        "src/*.ts"
    ]
}